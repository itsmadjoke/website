<style>
body {
  font-family: Arial, Helvetica, sans-serif;
  margin: 0px;
  padding:0px;
  width: 100%;
}

.navbar {
  overflow: hidden;
  background-color: rgb(16, 219, 152);
}

.dropdown {
  float: right;
  overflow: visible;
  padding-right:30px;
}
.dropbtn:hover{
  opacity: 0.8;
}

.dropdown .dropbtn, input {
  font-size: 16px;  
  border: none;
  outline: none;
  color: white;
  padding: 14px 16px;
  background-color: inherit;
  font-family: inherit;
  margin: 0;
}

.dropdown-content {
  display: block;
  position: absolute;
  background-color: #f9f9f9;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
  right:0;
}

.dropdown-content {
  float: none;
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
  text-align: left;
}
.bottom-row {
  display: flex;
  justify-content:center;
}
.dropdown-content li {
  list-style: none;
  padding:0px;
}
.dropdown-content ul {
  padding:0px;
}
.display {
  display:none;
}


/* end of navbar */
/*kairej baras */
.sidebar {
  margin: 0;
  padding: 0;
  width: 200px;
  background-color: #f1f1f1;
  position: fixed;
  height: 100%;
  overflow: auto;
}

.sidebar a {
  display: block;
  color: black;
  padding: 16px;
  text-decoration: none;
}
 
.sidebar a.active {
  background-color: #04AA6D;
  color: white;
}

.sidebar a:hover:not(.active) {
  background-color: #555;
  color: white;
}

div.content {
  margin-left: 200px;
  padding: 1px 16px;
  background-color: rgba(243, 241, 241, 0.596);
  height:1000px;
}
/*contentas*/

.cards {
  display: flex;
  justify-content: left;
}
.card1 {
border: none;
border-radius: 15px;
padding: 1rem;
box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
transition: 0.3s;
position:relative;
margin-right:1.25rem;
margin-top: 1.25rem;
padding:100px;
background-color: white;
}
.card1 .balance {
  position: absolute;
    top: 1px;
    left: 12px;
    font-weight: 100;
}
.card2 {
border: none;
border-radius: 15px;
padding: 1rem;
box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
transition: 0.3s;
position:relative;
margin-right:1.25rem;
padding-right: 262px;
margin-top: 1.25rem;  
background-color: white;


}
.card2 .activity {
  position:initial;
    top: 1px;
    left: 12px;
    font-weight: 100;
}
/*media */
@media screen and (max-width: 700px) {
  .sidebar {
    width: 100%;
    height: auto;
    position: relative;
  }
  .sidebar a {float: left;}
  div.content {margin-left: 0;}
}

@media screen and (max-width: 400px) {
  .sidebar a {
    text-align: center;
    float: none;
  }
}
</style>

<body>

  <div class="navbar">
    <div class="dropdown">
      <button class="dropbtn">Dovydas 
        <i class="fa fa-caret-down"></i>
      </button>
      <div class="dropdown-content display">
        <form action="/logout?_method=DELETE" method="POST">
          <ul>
            <li><%= name %> <%= surname %></li>
            <li>Balance: <span>0.00&euro;</span></li>
          </ul>
          <div class="botom-row">
          <a href="#">Add funds</a>
        <input class="logout"type="submit" value="Logout" style="background:none; border-width:0px; color:black;cursor:pointer;padding:0;">
        </div>
      </form>
      </div>
    </div> 
  </div>
  <div class="sidebar">
    <a href="#">Your balance</a>
    <a href="#" id="addFunds">Add funds</a>
    <a href="#">Spend your funds</a>
  </div>
  
  <div class="content">
    <div class="cards">
      <div class="card1">
<h2 class="balance">Balance:</h2>
<h1>0.00&euro;</h1>


      </div>
<div class="card2">

<h2 style="font-weight:100 ;">Recent activity:</h2>
<div class="activity">
<p>Spent 51e date</p>
<p>Added 598e date</p>
</div>
</div>




    </div>




  </div>
  




